
@{
    Layout = null;
    var BaiDuHot = ViewData["BaiDuHot"] as List<string>;
    var VideoUpdateList = ViewData["VideoUpdateList"] as List<Video>;
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
    <title>BT香蕉 - 最好用的磁力链接，电影资源搜索引擎(btbanana.com)</title>
    <meta name="keywords" content="磁力搜索,磁力链接,种子搜索,BT搜索,视频解析,电影库，最新电影，热播电视剧，电影网，免费电影，在线电影，在线观看，影视网">
    <meta name="description" content="BT香蕉(btbanana.com)是一个拥有资源最多，更新速度最快的磁力链接，电影资源搜索引擎，提供最新最热的bt资源、最新电影等资源，提供高效精准的垂直搜索服务。以及最新电影和热播电视剧免费在线观看，为影迷提供全网最新最全无广告电影电视剧最完美的观看体验。">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta http-equiv="cache-control" content="no-siteapp">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/animate.css/3.5.2/animate.min.css" rel="stylesheet">
    <link href="~/css/bootsnav.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <header class="gnome-header">
        <nav class="navbar navbar-default clearfix">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-wrapper" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar top-bar"></span>
                        <span class="icon-bar middle-bar"></span>
                        <span class="icon-bar bottom-bar"></span>
                    </button>
                    <a class="gnome-navbar-brand visible-xs" title="BT香蕉" href="/">BT香蕉</a>
                </div>
                <div class="navbar-collapse collapse" id="navbar-wrapper" aria-expanded="false" style="height: 1px;">
                    <ul class="nav navbar-nav">
                        <li><a title="首页" href="/">首页</a></li>
                        <li><a title="电影库" href="/video">电影库</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6 col-md-offset-3">
                    <a href="/" style="display: block; margin: 30px 0;">
                        <img class="img-responsive center-block" src="~/images/logo_b.png" alt="btbanana.com search logo" title="btbanana.com" />
                    </a>
                </div>
                <form class="form col-md-6 col-md-offset-3" onsubmit="return false;">
                    <div class="input-group">
                        <input type="text" class="form-control" name="key" id="ikey" autocomplete="off">
                        <span class="input-group-btn">
                            <input class="btn btn-success" type="submit" value="磁力搜索" id="searchForm">
                        </span>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10 col-md-offset-1" style="margin-top: 20px;">
                <span class="index-title hidden-xs">热门关键词：</span>
                <div class="hotkey hidden-xs">
                    @{
                        if (BaiDuHot != null)
                        {
                            foreach (var item in BaiDuHot)
                            {
                                <a href="/s/magnet/@item" target="_blank">@item</a>
                            }
                        }
                    }
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-md-10 col-md-offset-1" style="margin-top: 20px; margin-bottom: 40px;">
                <div class="updateList">
                    <span class="index-title hidden-xs">最近更新：</span>
                    <ul>
                        @{
                            if (VideoUpdateList != null)
                            {
                                foreach (var item in VideoUpdateList)
                                {
                                    <li><a class="clearfix" href="/d/video/@item.Id" target="_blank"><span class="pull-left">@($"[{item.Classify}] {item.Name}[{item.Remark}]")</span><span class="pull-right hidden-xs">@(item.UpdateTime.ToString("yyyy-MM-dd HH:mm:ss"))</span></a></li>
                                }

                            }
                        }
                    </ul>
                </div>
            </div>
        </div>

    </div>
    @Html.Partial("_Footer")
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        $(function () {

            function submitSearch() {
                var key = $.trim($("#ikey").val());
                if (key == "" || key.length <= 0) {
                    //alert("请先输入参数")
                } else {
                    window.open('/s/magnet/' + encodeURIComponent(key));
                }
            }
            $('#ikey').bind('keypress', function (event) {
                if (event.keyCode == "13") {
                    submitSearch();
                }
            });

            $('#searchForm').bind('click', function (event) {
                submitSearch();
            });

            $("#ikey").focus().select();

        });
    </script>
</body>
</html>