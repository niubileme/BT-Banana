
@{
    Layout = null;
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}
@helper selected(string c, string culture)
{
if (c == culture)
{
        @:selected
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>@Resource.WebTitle</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta name="keywords" content="@Resource.WebKeyWords" />
    <meta name="description" content="@Resource.WebDescription" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="http://cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="http://cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <link href="~/Content/css/todc-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-md-12 channel-menu">
                <div class="pull-right float-middle">
                    <select id="lang" onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);">
                        <option value="/setlang?lang=zh-CN" @selected("zh-cn", culture)>
                            简体中文
                        </option>
                        <option value="/setlang?lang=en-US" @selected("en-us", culture)>
                            English
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row-fluid" style="margin-top:150px">
            <form action="/s" method="get" class="col-md-6 col-md-offset-3 center" id="searchForm">
                <div class="main-search-logo">
                    <a href="/">
                        <img src="~/Content/img/logo_b.png" alt="btbanana.com search logo" title="btbanana.com">
                    </a>

                    <h1>@Resource.IndexTips</h1>
                </div>
                <div class="main-search-input">


                    <input type="text" placeholder="@Resource.IndexInputPlaceholder" name="q" class="form-control input-lg input-search" />
                </div>
                <div class="main-search-btn">
                    <input type="submit" value="@Resource.IndexSubmitButton" class="btn btn-default btn-lg btn-main-search">
                </div>
            </form>
        </div>

        <div class="row-fluid">
            <div class="col-md-6 col-md-offset-3" style="margin-top:30px; margin-bottom: 40px;">
                <div class="hotkey">

                </div>
            </div>
        </div>

    </div>
    @Html.Partial("Footer_PartialPage")
    @{
        if (culture == "zh-cn")
        {
            <script>
                $(function () {
                    $.ajax({ type: 'POST',url: '/GetBaiDuHotKeys',data: { n: 10 },success: function (data) {if (data.msg) {$.each(data.data, function (i, v) {$('<a href="/s/' + v + '">' + v + '</a>&nbsp;&nbsp;&nbsp;&nbsp').appendTo('.hotkey');});}}});
                })
            </script>
        }
    }
</body>
</html>